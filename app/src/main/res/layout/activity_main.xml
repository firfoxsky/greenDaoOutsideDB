<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.pengtaoh.greendaoimportoutsidedb.MainActivity">

    <TextView
        android:id="@+id/hello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"/>

    <Button
        android:id="@+id/import_city_db"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hello"
        android:text="導入City數據庫"/>

    <Button
        android:id="@+id/import_target_db"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/import_city_db"
        android:text="導入Target數據庫"/>


    <Button
        android:id="@+id/select_city_db"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/import_target_db"
        android:text="查詢city数据"
        android:visibility="gone"/>

    <Button
        android:id="@+id/select_in_db"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/select_city_db"
        android:text="查詢内部Brand数据"/>

    <Button
        android:id="@+id/select_target_db"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/select_in_db"
        android:text="查詢target数据"
        android:visibility="gone"/>

    <Button
        android:id="@+id/select_disk_db"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/select_target_db"
        android:text="导出数据库到sd卡中"/>

    <Button
        android:id="@+id/init_data_db"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/select_disk_db"
        android:text="创建模拟数据"/>

</RelativeLayout>
